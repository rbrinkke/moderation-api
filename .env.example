# Environment
ENVIRONMENT=development
DEBUG=true

# API
API_V1_PREFIX=/moderation
PROJECT_NAME=Activity Platform - Moderation API

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/activities_db

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT (from auth-api)
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256

# External APIs
EMAIL_API_URL=http://email-api:8002
AUTH_API_URL=http://auth-api:8000

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL=INFO

# ===== API Documentation (Swagger UI / OpenAPI) =====
# Enable/disable Swagger UI and OpenAPI endpoints
# IMPORTANT: Set to false in production for security (prevents API enumeration)
# Development: true (developers need API documentation)
# Staging: true (QA team needs to verify API behavior)
# Production: false (security best practice)
ENABLE_DOCS=true
API_VERSION=1.0.0
